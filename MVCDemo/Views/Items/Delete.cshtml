@model MVCDemo.Models.Item

@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css">
</head>
<body>
    <div class="container">
        <div class="form-container">

        <h1 class="center">Delete</h1>

        <h3 class="center">Are you sure you want to delete this?</h3>
        <div>
            <h4 class="center">Item</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10 space">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                    <dd class="col-sm-10 space">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                    <dd class="col-sm-10 space">
                    @Html.DisplayFor(model => model.Category)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                    <dd class="col-sm-10 space">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
    
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn  btns  btn-danger" />
                <a asp-action="Index" class="btn btns btn-grey">Back to List</a>
            </form>
        </div>
        </div>
    </div>
</body>
</html>
